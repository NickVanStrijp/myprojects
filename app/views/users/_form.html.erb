<% provide(:title) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    
      <%= render 'shared/error_messages' %>
    
      <%= f.label :user_first_name %>
      <%= f.text_field :user_first_name, class: 'form-control' %>
      
      <%= f.label :user_last_name %>
      <%= f.text_field :user_last_name, class: 'form-control' %>

      <%= f.label :user_email %>
      <%= f.email_field :user_email, class: 'form-control' %>
      
       <%= f.label :user_nnumber %>
      <%= f.text_field :user_nnumber, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
      
    <% end %>
  </div>
</div> 