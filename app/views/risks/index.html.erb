<p id="notice"><%= notice %></p>

<h1>Listing Risks</h1>

<table>
  <thead>
    <tr>
      <th>Risk source</th>
      <th>Risk probability</th>
      <th>Risk impact</th>
      <th>Risk status</th>
      <th>Risk plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @risks.each do |risk| %>
      <tr>
        <td><%= risk.risk_source %></td>
        <td><%= risk.risk_probability %></td>
        <td><%= risk.risk_impact %></td>
        <td><%= risk.risk_status %></td>
        <td><%= risk.risk_plan %></td>
        <td><%= link_to 'Show', risk %></td>
        <td><%= link_to 'Edit', edit_risk_path(risk) %></td>
        <td><%= link_to 'Destroy', risk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

